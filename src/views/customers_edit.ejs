<% include partials/_header %>
<div class="container mt-2">
<div class="col-md-12">
    <a href="/client" class="btn btn-danger">Regresar</a>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/client/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="nombres" value="<%= data.nombres%>" placeholder="Nombres" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="direccion" value="<%= data.direccion%>" placeholder="Direccion" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="telefono" value="<%= data.telefono%>" placeholder="Telefono" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Actualizar Cliente
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
<% include partials/_footer %>
