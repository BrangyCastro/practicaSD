<% include partials/_header %>

<div class="container mt-2">
  <div class="row">
      <div class="col-md-12">
          <a href="/" class="btn btn-danger">Regresar</a>
      </div>
    <div class="col-md-5 offset-md-3 card">
        <h2>Ingreso de Cliente</h2>
        <div class="card-body">
            <form action="/client/add" method="POST">
              <div class="form-group">
                <input type="text" name="nombres" placeholder="Nombres" class="form-control" autofocus>
              </div>
              <div class="form-group">
                <input type="text" name="direccion" placeholder="Direccion" class="form-control">
              </div>
              <div class="form-group">
                <input type="text" name="telefono" placeholder="Telefono" class="form-control">
              </div>
    
              <button type="submit" class="btn btn-primary">
                Guardar Cliente
              </button>
            </form>
          </div>
        </div>
      <table class="table table-bordered table-hover mt-2">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Nombres</td>
            <td>Direccion</td>
            <td>Telefono</td>
            <td>Accion</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].nombres %></td>
                <td><%= data[i].direccion %></td>
                <td><%= data[i].telefono %></td>
                <td>
                  <a href="/client/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                  <a href="/client/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    
  </div>
</div>

<% include partials/_footer %>
